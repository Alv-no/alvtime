#!/usr/bin/env sh

[ "start" = $1 ] && \
  docker-compose --file .devcontainer/docker-compose.yaml up --detach && \
  docker-compose --file .devcontainer/docker-compose.yaml exec alvtime-admin-react-pwa-alvtime-admin-react-pwa-dev npx react-scripts start

[ "up" = $1 ] && \
  docker-compose --file .devcontainer/docker-compose.yaml up --detach

[ "serve" = $1 ] && \
  docker-compose --file .devcontainer/docker-compose.yaml exec alvtime-admin-react-pwa-alvtime-admin-react-pwa-dev npx react-scripts start

[ "down" = $1 ] && \
  docker-compose --file .devcontainer/docker-compose.yaml down --volumes

[ "logs" = $1 ] && \
  docker-compose --file .devcontainer/docker-compose.yaml logs --follow

[ "pull" = $1 ] && \
  docker-compose --file .devcontainer/docker-compose.yaml pull

[ "build" = $1 ] && \
  docker-compose --file .devcontainer/docker-compose.yaml build

[ "test" = $1 ] && \
  docker-compose --file .devcontainer/docker-compose.yaml exec alvtime-admin-react-pwa-alvtime-admin-react-pwa-dev npx react-scripts test

[ "prune" = $1 ] && \
  docker system prune --force
